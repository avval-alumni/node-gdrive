{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noStrictGenericChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "traceResolution": false,
    "noEmitOnError": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2016",
      "es6",
      "es2015",
      "dom"
    ],
    "outDir": "out"
  },
  "include": [
    "./src/**/*.ts",
    "./cli/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
